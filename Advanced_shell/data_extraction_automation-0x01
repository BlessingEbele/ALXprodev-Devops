#!/bin/bash

# Ensure the data.json file exists
if [ ! -f data.json ]; then
  echo "Error: data.json not found. Please run the API fetch script first."
  exit 1
fi

# Extract values using jq
NAME=$(jq -r '.name' data.json | sed 's/.*/\u&/')  # Capitalize first letter
HEIGHT_RAW=$(jq -r '.height' data.json)
WEIGHT_RAW=$(jq -r '.weight' data.json)
TYPE=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')

# Convert height from decimetres to metres (e.g., 4 -> 0.4m)
HEIGHT=$(awk "BEGIN {printf \"%.1f\", $HEIGHT_RAW / 10}")

# Convert weight from hectograms to kilograms (e.g., 60 -> 6kg)
WEIGHT=$(awk "BEGIN {printf \"%.0f\", $WEIGHT_RAW / 10}")

# Final formatted output
echo "$NAME is of type $TYPE, weighs ${WEIGHT}kg, and is ${HEIGHT}m tall."
